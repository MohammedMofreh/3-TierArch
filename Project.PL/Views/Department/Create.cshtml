@model Project.DAL.Models.Department

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Name)
        @Html.LabelFor(m => m.Code)
        @Html.TextBoxFor(m => m.Code, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Code)
        @Html.LabelFor(m => m.DateOfCreation)
        @Html.TextBoxFor(m => m.DateOfCreation, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.DateOfCreation)
        @Html.LabelFor(m => m.ModifiedBy)
        @Html.TextBoxFor(m => m.ModifiedBy, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.ModifiedBy)
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
}
